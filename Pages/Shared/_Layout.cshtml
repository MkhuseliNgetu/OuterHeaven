<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OuterHeaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OuterHeaven.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-family: Porter Sans Block; color: white">OuterHeaven</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            if (Model.Experience == "Male" || Model.Experience == "Female" || Model.Experience == "Default")
                                        {
                             <li class="nav-item">
                             <a class="nav-link" asp-area="" asp-page="/" style="font-family: Porter Sans Block; color: white">Clothing</a>
                             </li>
                             <li class="nav-item">
                             <a class="nav-link" asp-area="" asp-page="/" style="font-family: Porter Sans Block; color: white">Shoes</a>
                             </li>
                             <li class="nav-item">
                             <a class="nav-link" asp-area="" asp-page="/" style="font-family: Porter Sans Block; color: white">Accessories</a>
                             </li>
                            }
                        }
                    
                    </ul>
                </div>

                <div class="collapse navbar-collapse"></div>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <input type="text" name="Username" placeholder="Username" style="background-color:white; height:2rem; width: 14rem;" minlength="1"/>
                    </li>
                    <li class="nav-item">
                        <input type="text" name="Password" placeholder="Password" style="background-color:white; height:2rem; width: 14rem;" minlength="1"/>
                    </li>
                    <li class="nav-item">
                        <input type="submit" name="Login" value="Login" style="background-color:black; height:2rem; width: 8rem;" placeholder="Login"/>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - OuterHeaven - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>